<% include partials/headerLogin %>
<% include partials/leftNavbar %>

<div class="col-11">
    <div class="section-profile">
        <h2>Środki trwałe</h2>
        <div class="border">
        <div class="panel-body">
            <div class="row">
                <div class="col-4">
                    <input type="text" class="form-control search" placeholder="Wyszukaj" >
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2 itemCol">
                  <div class="list-group" id="list-tab" role="tablist">
                        <% for(var i=0; i < assets.length; i++) { %>
                            <a class="list-group-item list-group-item-action" id="list-<%= assets[i].IdSrodkiTrwale %>-list" data-toggle="list" href="#list-<%= assets[i].IdSrodkiTrwale %>" role="tab" aria-controls="<%= assets[i].IdSrodkiTrwale %>"><%= assets[i].Nazwa %></a>
                        <%}%>

                  </div>
                 
                </div>
                <div class="col-lg-10 infoPanel">
                  <div class="tab-content" id="nav-tabContent">
                        <% for(var i=0; i < assets.length; i++) { %>
                            <div class="tab-pane fade show " id="list-<%= assets[i].IdSrodkiTrwale %>" role="tabpanel" aria-labelledby="list-<%= assets[i].IdSrodkiTrwale %>-list">
                                <h2><%= assets[i].Nazwa %></h2>
                                <p> <b>Wartosc netto: </b> <%= assets[i].WartoscNetto %> zł</p>
                                <p><b>Data zakupu: </b> <%= assets[i].DataZakupu %></p>
                                <h3>Opis:</h3>
                                <%= assets[i].Opis %> <br />
                                <button type="button" class="btn btn-success">Edytuj</button>
                            </div>
                        <%}%>

                  </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                     <button type="button" class="btn btn-success">Dodaj przedmiot</button>
                </div>
            </div>
            

        </div>
    </div>
    </div>
</div>
<% include partials/footerLogin %>