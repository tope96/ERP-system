<% include partials/headerLogin %>

<!-- Title -->
<div class="row">
    <div class="container text-center col-lg-12">
        <span class="h1 title">
            <h1>
                <%= name %>, wyszukaj interesujące Ciebie wydarzenie, wpisując jego nazwę:</h1>
        </span>
        <form id="searchForm" name="searchForm" method="post" action="searchEvent">
            <div class="input-group">

                <div class="col-lg-10 ">
                    <input type="text" class="search form-control form" placeholder="Wyszukaj wydarzenie" name="eventName">
                </div>
                <span class="col-lg-2 input-group-btn">
                    <button type="submit" class="search-button btn btn-success"><i class="fas fa-search"> </i>Wyszukaj</button>
                </span>


            </div>
        </form>

    </div>


</div>
</div>
</section>


<section id="profileInfo">
    <h2>Tagi</h2>
    <p>Tutaj możesz wyszukiwać wydarzenia po tagach.</p>
    <div class="form-inline ">
        <div class="form-group tags">

            <% for(var i=0; i < greetings.length; i++) { %>

            <form class="tag" id="searchForm" name="searchForm" method="post" action="searchEventTag">
                <input type="submit" name="button" class="btn btn-outline-primary" value="<%= greetings[i].Kategoria %>">
            </form>

            <% } %>
        </div>


</section>

<% include partials/footerLogin %>