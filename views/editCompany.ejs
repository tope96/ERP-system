<% include partials/headerLogin %>
<% include partials/leftNavbar %>

<div class="col-11">
        <%if (normal === true){%>
        <div class="section-assets">
            <div class="row border">
                <div class="col-md-6">
                    <b>Nazwa firmy: </b>
                    <p><%= company.Nazwa %></p>

                    <b>NIP:</b>
                    <p><%= company.Nip %></p>
                </div>
                <div class="col-md-6">
                    <b>Adres firmy</b>
                    <p><%= town.Miasto %></p>
                    <p><%= company.Adres %></p>
                </div>
                
                <p>Załóż nowe konto domenowe dla pracownika: <a href="/editCompanyAddProfile"><button type="button" class="btn btn-success"><i class="fa fa-user-plus"></i></button></a></p>
                <a href="/editCompanyEdition" ><button type="button" class="btn btn-success">Edytuj</button></a>
            </div>
        </div>
        <% } %>
        <%if (normal === false){%>
            <div class="section-assets">
                <div class="row border">
                    <div class="col-md-6">
                       <form action="/companyEdition" method="POST">
                        <b>Nazwa firmy: </b>
                        <p> <input type="text" class="form-control" name="companyName" placeholder="Nowa nazwa" value="<%= company.Nazwa %>"> </p>
            
                        <b>NIP:</b>
                        <p><input type="number" class="form-control" name="companyNip" placeholder="Nowy NIP" value="<%= company.Nip %>"></p>
                    </div>
                    <div class="col-md-6">
                        <b>Adres firmy</b>
                        <p><input type="text" class="form-control" name="companyTown" placeholder="Nowe miasto" value="<%= town.Miasto %>"></p>
                        <p><input type="text" class="form-control" name="companyAddress" placeholder="Nowy adres" value="<%= company.Adres %>"></p>
                    </div>
            
                    <a href="/editCompany"><button type="button" class="btn btn-danger">Anuluj</button></a>
                    <button type="submit" class="btn btn-success">Zapisz</button>
                    <input type="hidden" name="companyId" value="<%= company.IdFirma %>">
                    </form> 
                </div>
            </div>
        <% } %>
</div>

<%if (add === true){%>
    <div id="myModal" class="modal">
        <div class="modal-content">
            <h3>Dodaj konto</h3>
            <form action="/addProfile" method="POST">
                <p>Wybierz pracownika, któremu utworzysz konto domenowe</p>
                <select class="form-control createAccount selectWorker input" placeholder="Pracownik" id="worker" name="worker" required>
                    <%if (workers.length < 1){ %>
                        <option>Brak pracowników bez kont</option>
                    <% } else {%>
                        <option>Wybierz pracownika</option>
                    <% } %>
                        <% for(var i=0; i < workers.length; i++) { %>
                          <option value="<%=workers[i].IdPracownik %>"><%= workers[i].Imie %> <%= workers[i].Nazwisko %></option>
                        <%}%>
                </select>
                <input type="text" class="form-control createAccount input" name="login" placeholder="Login">
                <input type="password" class="form-control createAccount input" name="password" placeholder="Hasło">
                
                <div class="row buttonsInRow">
                <div class="col-6 leftButtonInRow">
                    <a href="/editCompany"><button type="button" class="btn btn-danger">Anuluj</button></a>
                </div>
                <div class="col-6 right">
                    <button type="submit" class="btn btn-success continue" disabled>Zapisz</button>
                </div>
            </form>
            </div>
        </div>
    </div>
<% } %>

<%if (userAlreadyExists === true){%>
    <div id="myModal" class="modal">
        <div class="modal-content">
            <h3>Uwaga!</h3>
            <p>Użytkownik o takim adresie email i numerze telefonu istnieje!</p>
            <p>Spróbuj podać inne dane.</p>
            <a href="/editCompanyAddProfile"><button type="button" class="btn btn-success">Ok</button></a>
        </div>
    </div>
<% } %>

<%if (addSuccess === true){%>
    <div id="myModal" class="modal">
        <div class="modal-content">
            <h3>Sukces!</h3>
            <p>Konto zostało utworzone poprawnie.</p>
            <a href="/editCompany"><button type="button" class="btn btn-success">Ok</button></a>
        </div>
    </div>
<% } %>


<%if (editSuccess === true){%>
    <div id="myModal" class="modal">
        <div class="modal-content">
            <h3>Sukces!</h3>
            <p>Dane zostaly zmienione.</p>
            <a href="/editCompany"><button type="button" class="btn btn-success">Ok</button></a>
        </div>
    </div>
<% } %>

<script>
    $(document).ready(function () {
        //makes submit button disable when inputs are empty
        $(document).ready(function () {
            $('.input').keyup(function () {

                var empty = false;
                $('.input').each(function () {
                    if ($(this).val().length == 0 || $('.selectWorker').val() == 'Brak pracowników bez kont' || $('.selectWorker').val() == 'Wybierz pracownika') {
                        empty = true;
                    }
                });

                if (empty) {
                    $('.continue').attr('disabled', 'disabled');
                } else {
                    $('.continue').attr('disabled', false);
                }
            });

            $('.selectWorker').click(function () {
                var empty = false;
                $('.input').each(function () {
                    if ($(this).val().length == 0 || $('.selectWorker').val() == 'Brak pracowników bez kont' || $('.selectWorker').val() == 'Wybierz pracownika') {
                        empty = true;
                    }
                });

                if (empty) {
                    $('.continue').attr('disabled', 'disabled');
                } else {
                    $('.continue').attr('disabled', false);
                }
            });
        });

    });
</script>

